# Google Gemini API Configuration (replaces OpenAI)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Firecrawl Web Search API
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Zep Memory Service
ZEP_API_KEY=your_zep_api_key_here
ZEP_API_URL=https://api.getzep.com

# Milvus Vector Database (Local/Docker)
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_ALIAS=default

# Arxiv API (No key needed - public API)
ARXIV_TIMEOUT=7

# Application Settings
LOG_LEVEL=INFO
QUALITY_THRESHOLD=0.5
RESPONSE_TIMEOUT=30
RETRIEVAL_TIMEOUT=15
EVALUATION_TIMEOUT=5
SYNTHESIS_TIMEOUT=8
MEMORY_TIMEOUT=2

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_LOGGER_LEVEL=info
STREAMLIT_CLIENT_SHOW_ERROR_DETAILS=true
